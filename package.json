{
  "name": "@robb_j/puggle-presets",
  "description": "A repo of puggle presets",
  "version": "0.4.0",
  "repository": "robb-j/puggle-presets",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "lint": "tsc --noEmit",
    "build": "tsc"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "puggle": "^0.5.3"
  },
  "devDependencies": {
    "@types/node": "^13.9.5",
    "@types/prompts": "^2.0.5",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "yorkie": "^2.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
