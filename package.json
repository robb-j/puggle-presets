{
  "name": "@robb_j/puggle-presets",
  "description": "A repo of puggle presets",
  "version": "0.7.0",
  "repository": "robb-j/puggle-presets",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "lint": "tsc --noEmit",
    "build": "tsc"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "dedent": "^0.7.0",
    "puggle": "^0.5.4"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/node": "^14.11.2",
    "@types/prompts": "^2.0.9",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "yorkie": "^2.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
