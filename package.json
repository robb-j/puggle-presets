{
  "name": "@robb_j/puggle-presets",
  "description": "A repo of puggle presets",
  "version": "0.2.0",
  "repository": "robb-j/puggle-presets",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prettier": "prettier --write '**/*.{js,json,css,md,ts,tsx}'",
    "prepublish": "npm run build",
    "lint": "tsc --noEmit",
    "build": "tsc"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "puggle": "^0.5.2"
  },
  "devDependencies": {
    "@types/node": "^12.7.4",
    "@types/prompts": "^2.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.8.3",
    "yorkie": "^2.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
